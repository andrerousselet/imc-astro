---
import { Icon } from "astro-icon";

export type LinkProps = {
  text: string;
  href: string;
  target?: string;
  class: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
  size?: number
};

const { text, href, icon, size, ...rest } = Astro.props as LinkProps;
---

<a {href} {...rest}>
  {
    icon && icon.side === "left" && (
      <Icon name={icon.name} height={size} width={size} />
    )
  }
  <span>{text}</span>
  {
    icon && icon.side === "right" && (
      <Icon name={icon.name} height={size} width={size} />
    )
  }
</a>
