---
import Social from "./Social.astro";
---

<footer class="bg-imc">
  <section class="max-w-5xl mx-auto p-4 sm:p-6 divide-y divide-neutral-200 divide-opacity-40">
    <div class="flex items-center justify-between pb-6">
      <Social />
    </div>
    <div class="pt-6 flex flex-col items-center sm:flex-row sm:justify-between">
      <p class="text-sm text-center text-neutral-200 text-opacity-80">
        Copyright &copy; <span id="copyright"></span> | Instituto Medicina Cabalista
      </p>
      <p class="text-sm text-center text-neutral-200 text-opacity-80">
        by <a href="https://github.com/andrerousselet" target="_blank" class="transition hover:text-neutral-200 hover:underline hover:underline-offset-2">Andre Rousselet</a>
      </p>
    </div>
  </section>
</footer>

<!-- client side js -->
<script>
  const date = document.querySelector("#copyright") as HTMLElement;
  date.textContent = new Date().getFullYear().toString();
</script>
