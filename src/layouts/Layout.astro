---
import Head from "../components/HtmlHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Instituto Medicina Cabalista",
  description = "Transformando a vida pessoal e profissional de terapeutas e aspirantes a terapeutas, por meio do aprendizado e da prática de técnicas milenares de cura da Medicina Cabalista.",
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <Head {title} {description} />
  <body class="min-h-screen flex flex-col bg-neutral-100 text-neutral-700 scrollbar-hide">
    <Header />
    <main class="mx-auto max-w-5xl p-4 sm:p-6 flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
