---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Instituto Medicina Cabalista",
  description = "Transformando a vida pessoal e profissional de terapeutas e aspirantes a terapeutas, por meio do aprendizado e da prática de técnicas milenares de cura da Medicina Cabalista.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <BaseHead {title} {description} />
  <body
    class="h-screen flex flex-col bg-neutral-100 text-neutral-700 scrollbar-hide"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
