---
import Layout from "./Layout.astro";
import PostHeader from "../components/PostHeader.astro";

export type Post = {
  title: string;
  description?: string;
  date: string;
  tags?: string[];
  author: string;
  image: {
    src: string;
    alt: string;
  };
};

export type PostFrontmatter = {
  frontmatter: Post;
  url: string;
}

const { frontmatter } = Astro.props as PostFrontmatter;
const { title, description, date, tags, author, image } = frontmatter;
---

<Layout {title} {description}>
  <PostHeader {title} {date} {tags} {author} {image} />
  <article class="mx-auto max-w-5xl p-4 sm:p-6">
    <slot />
  </article>
</Layout>
